create_table("locations") {
	t.Column("id", "integer", {primary: true})
	t.Column("name", "string", {"size":255})
	t.Column("type", "smallint", {"size":5})
	t.Column("parent", "integer", {"size":10})
	t.Column("postal_code", "string", {"size":9})
	t.Column("map_name", "string", {"size":255, "null":true})
	t.Column("image", "string", {"size":255, "null":true})
	t.Column("caption", "text", {"null":true})
	t.Timestamps()
}